{
  "name": "ngx-linkifyjs",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:client-and-server-bundles": "ng build --configuration production && ng run ngx-linkifyjs-demo:server:production --bundleDependencies all",
    "build:client-and-server-bundles:ghpages": "npm run build:prod:ghpages && ng run ngx-linkifyjs-demo:server:production --bundleDependencies all",
    "build:docs": "npx compodoc -p projects/ngx-linkifyjs/tsconfig.lib.json --hideGenerator --disableCoverage -d dist/browser/doc/",
    "build:prod:ghpages": "ng build --preserve-symlinks --configuration production --aot --build-optimizer --base-href /ngx-linkifyjs/ --deploy-url /ngx-linkifyjs/",
    "build:prerender": "npm run build:client-and-server-bundles && npm run compile:server && npm run generate:prerender",
    "build:prerender:ghpages": "npm run build:client-and-server-bundles:ghpages && npm run compile:server && npm run generate:prerender",
    "deploy": "ng deploy --base-href=/ngx-linkifyjs/ --no-build",
    "generate:prerender": "cd dist && node prerender",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "release": "release-it",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.12",
    "@angular/cdk": "^14.2.7",
    "@angular/common": "^14.2.12",
    "@angular/compiler": "^14.2.12",
    "@angular/core": "^14.2.12",
    "@angular/forms": "^14.2.12",
    "@angular/platform-browser": "^14.2.12",
    "@angular/platform-browser-dynamic": "^14.2.12",
    "@angular/platform-server": "^14.2.12",
    "@angular/router": "^14.2.12",
    "@nguniversal/express-engine": "^14.2.2",
    "@nguniversal/module-map-ngfactory-loader": "v7.0.2",
    "angular-cli-ghpages": "^1.0.5",
    "angulartics2": "latest",
    "express": "^4.18.2",
    "linkifyjs": "^4.0.2",
    "ngx-markdown": "^14.0.1",
    "rxjs": "~7.5.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.10",
    "@angular-devkit/core": "^14.2.10",
    "@angular-devkit/schematics": "^14.2.10",
    "@angular/cli": "^14.2.10",
    "@angular/compiler-cli": "^14.2.12",
    "@angular/language-service": "^14.2.12",
    "@compodoc/compodoc": "^1.1.19",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.10",
    "@types/jest": "24.0.23",
    "@types/node": "^12.11.1",
    "eslint": "^8.27.0",
    "http-server": "^0.11.2",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "jest": "^28.0.0",
    "jest-preset-angular": "^12.2.2",
    "ng-packagr": "^14.2.2",
    "protractor": "~7.0.0",
    "release-it": "^12.6.3",
    "ts-loader": "^5.2.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.7.2",
    "webpack-cli": "^5.0.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.(ts|js|html)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/app/$1",
      "@assets/(.*)": "<rootDir>/src/assets/$1",
      "@core/(.*)": "<rootDir>/src/app/core/$1",
      "@env": "<rootDir>/src/environments/environment",
      "@src/(.*)": "<rootDir>/src/src/$1",
      "@state/(.*)": "<rootDir>/src/app/state/$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  }
}
